<%- include('header') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12"><h1>Neues Event erstellen</h1></div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <% if (!userGroups) { %>
        <div class="bg-info">Du bist bisher nicht Mitglied in einer Gruppe. <a href="/groups" type="button" class="btn btn-default">Gruppe erstellen</a></div>
      <% } %>
      <form method="POST" action="/events/new">
        <div class="form-group">
          <label for="eventNameInput">Eventname</label>
          <input type="text" class="form-control" id="eventNameInput" name="name" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="ortInput">Ort</label>
          <input type="text" class="form-control" id="ortInput" name="location" placeholder="Ort">
        </div>
        <div class="form-group">
          <label for="dateInput">Datum</label>
          <input type="date" class="form-control" id="dateInput" name="date" placeholder="DD/MM/YYYY">
        </div>
        <div class="form-group">
          <label for="timeInput">Zeit</label>
          <input type="time" class="form-control" id="timeInput" name="time" placeholder="DD/MM/YYYY">
        </div>
				<div class="form-group">
					<select class="form-control" name="groupid">
            <% if (userGroups) { %>
						  <% userGroups.forEach(function(group) { %>
						  	<option value="<%= group.id %>"><%= group.name %></option>
						  <% }); %>
            <% } else { %>
              <option>Du bist nicht Mitglied in einer Gruppe</option>
            <% } %>
					</select>
				</div>
        <%if (userGroups) { %>
          <button type="submit" id="submitBtn" class="btn btn-default">Submit</button>
        <% } else { %>
          <button type="submit" id="submitBtn" class="btn btn-default" disabled="disabled">Submit</button>
        <% } %>
      </form>
    </div>
  </div>
</div>

<%- include('footer') %>
