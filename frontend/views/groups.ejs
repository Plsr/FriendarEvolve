<%- include('header') %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Alle Gruppen</h3>
        </div>
        <div class="panel-body">
          <table class="table">
            <thead>
              <th>#</th>
              <th>Name</th>
              <th>Anzahl der Mitglieder</th>
            </thead>
            <tbody class="js-group-table-body">
              <% groups.forEach(function (group) { %>
              <tr>
                <td><%= group.id %></td>
                <td><%= group.name %></td>
                <td><%= group.members ? group.members.length : 0 %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Neue Gruppe anlegen</h3>
        </div>
        <div class="panel-body">
          <form action="/groups/save" id="newGroup">
            <div class="form-group">
              <label for="inputGroupName">Name</label>
              <input type="email" class="form-control" id="inputGroupName" placeholder="Meine tolle Gruppe">
            </div>
            <button type="submit" class="btn btn-success">Anlegen</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %>